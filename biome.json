{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [".next", "dist"]
  },
  "linter": {
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "off",
        "useBlockStatements": "off",
        "noDefaultExport": "off"
      },
      "correctness": {
        "noNodejsModules": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
